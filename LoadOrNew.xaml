<Page x:Class="gladiaddi.LoadOrNew"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:gladiaddi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadOrNew">

    <Grid Background="#FF960000">
        <Button x:Name="LoadGladi" Content="" HorizontalAlignment="Left" Margin="259,199,0,0" VerticalAlignment="Top" Height="106" Width="106" Click="OnClickLoad">
            <Button.Background>
                <ImageBrush ImageSource="Images - Kopieren/loadGladiator.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="NewGladi" Content="" HorizontalAlignment="Left" Margin="604,199,0,0" VerticalAlignment="Top" Width="106" Height="106" Click="OnClickNewGladi">
            <Button.Background>
                <ImageBrush ImageSource="Images - Kopieren/newGladiator.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Page>
