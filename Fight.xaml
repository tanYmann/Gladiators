      xmlns:local="clr-namespace:gladiaddi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Fight">

    <Grid RenderTransformOrigin="0.494,0.489" Margin="0,0,0,-129.714">
