<Page x:Class="gladiaddi.Fight"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:gladiaddi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Fight" Background="#FF6F1515">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Rectangle Height="40"></Rectangle>
            <TextBlock x:Name="GladiPlayerTxt" Height="90"/>
            <Rectangle Height="40"/>
            <TextBlock x:Name="StaminaPlayer" Text="StaminaPlayer" />
        </StackPanel>
        
        <StackPanel Grid.Column="1">
            <Rectangle Height="40"/>
            <Button x:Name="FightBtn" Content="" Height="83" Margin="0,0,-0.143,0"  >
                <Button.Background>
                    <ImageBrush ImageSource="Images/Fight_new.png"/>
                </Button.Background>
            </Button>
            <Rectangle Height="40"/>
            <TextBlock x:Name="kampfLog" Text="KampfLog"/>
            <Rectangle Height="40"/>
          

            <Button x:Name="EndBtn" Content="Beenden" Click="EndBtn_Click" Height="88" Margin="0,0,-0.143,0">
                <Button.Background>
                    <ImageBrush ImageSource="Images/back#.png"/>
                </Button.Background>
            </Button>


            <Image x:Name="ResultImg" HorizontalAlignment="Left" VerticalAlignment="Top" Height="56" Width="Auto" />
        </StackPanel>
        <StackPanel Grid.Column="2">
            <Rectangle Height="40"/>
            <TextBlock x:Name="OpponentTxt" Height="90" />
            
            <Rectangle Height="40"/>
            <TextBlock x:Name="StaminaOpponwnt"  Text="StaminaOpponent" />
            <Rectangle Height="40"/>
          
        </StackPanel>
        

      
        
    </Grid>
</Page>
