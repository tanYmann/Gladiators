        <TextBlock x:Name="StaminaPlayer" Margin="405,34,250,0" TextWrapping="Wrap" Text="StaminaPlayer" VerticalAlignment="Top" Height="116" Background="White"/>
        <TextBlock x:Name="StaminaOpponwnt" HorizontalAlignment="Left" Height="115" Margin="595,35,0,0" TextWrapping="Wrap" Text="StaminaOpponent" VerticalAlignment="Top" Width="145" Background="White"/>
        <TextBlock x:Name="kampfLog" HorizontalAlignment="Left" Margin="365,165,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="106" Width="395" Background="White"/>

    </Grid>
</Page>
