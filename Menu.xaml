<Page x:Class="gladiaddi.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:gladiaddi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
       
       

        <StackPanel HorizontalAlignment="left" Width="352" Margin="10,0,0,0">

            <Image x:Name="GladiFace" Height="162" />
            <ListView x:Name="listView" Height="272">
                <ListView.View>
                    <GridView></GridView>
                </ListView.View>
            </ListView>


        </StackPanel>
        <StackPanel Grid.RowSpan="3" Margin="259,0,0,0" Grid.Column="3">
            <Button x:Name="trainBtn" Margin="92,0,196,0">Trainieren</Button>
            <Button x:Name="fightBtn" Margin="92,0,196,0">Kämpfen</Button>
            <Button x:Name="statBtn" Margin="92,0,196,0">Statistik</Button>
        </StackPanel>
    </Grid>
</Page>
