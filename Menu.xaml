<Page x:Class="gladiaddi.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:gladiaddi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid Margin="0,0,0,0.286" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="0,10,10,229.714" HorizontalAlignment="Right" Width="80">
            <Button x:Name="trainBtn" Width="80" Height="30" Click="OnClickTrain">Trainieren</Button>
            <Button x:Name="fightBtn" Width="80" Height="30" Click="OnFightBtnClick">Kämpfen</Button>
            <Button x:Name="statBtn" Width="80" Height="30" Click="OnClickStatBtn">Statistik</Button>
            <Button x:Name="menuBtn" Width="80" Height="30">Menü</Button>
        </StackPanel>
        <StackPanel Grid.Column="0">
            <Label>Name:</Label>
            <TextBlock x:Name="GladiName" FontSize="40" />
            <Label>Stamina:</Label>
            <TextBlock x:Name="GladiStamina" FontSize="40"/>
            <Label>Attack:</Label>
            <TextBlock x:Name="GladiAttack" FontSize="40"/>
            <Label>Defense:</Label>
            <TextBlock x:Name="GladiDefense" FontSize="40"/>
            <Label>Level:</Label>
            <TextBlock x:Name="GladiLevel" FontSize="40"/>
            <Label>XP:</Label>
            <TextBlock x:Name="GladiXp" FontSize="40"/>
        </StackPanel>
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="210" Margin="10,10,0,0" VerticalAlignment="Top" Width="265"/>
        <TextBlock x:Name="CoinTxt" Grid.Column="1" HorizontalAlignment="Left" Margin="15,255,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="180" Width="370">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.181"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>





    </Grid>
</Page>
